html
  body
    // ******HEADER******
    div(ng-controller='HeaderCtrl')
      header#header.header
        .container
          h1.logo.pull-left
            a.scrollto(href='/')
              span.logo-title MA
          // //logo
          nav#main-nav.main-nav.navbar-right(role='navigation')
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              // //nav-toggle
            // //navbar-header
            #navbar-collapse.navbar-collapse.collapse
              ul.nav.navbar-nav
                li.nav-item(ng-show='isSignedIn')
                  a.scrollto(href='/admin') Admin
                li.nav-item(ng-show='isSignedIn')
                  a.scrollto(href='#', ng-click='signout()') Signout
                li.nav-item(ng-hide='isSignedIn')
                  a.scrollto(href='#', ng-click='signinModal()') Sign In
                li.nav-item(ng-hide='isSignedIn')
                  a.scrollto(href='#', ng-click='signupModal()') Sign Up
                li.nav-item.last
                  a.scrollto(href='https://github.com/jbltx/generator-mean-stack', target='_blank') Docs
              // //nav
            // //navabr-collapse
          // //main-nav
      // //header
      script(type='text/ng-template', id='signin.html').
        <div class="modal-header">
        <h3 class="modal-title">Authentication Panel</h3>
        </div>
        <div class="modal-body">
        <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" ng-model="user.email" placeholder="Email">
        </div>
        <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" ng-model="user.password" placeholder="Password">
        </div>
        <p><input type="checkbox" name="remember" ng-model="user.remember"> Remember Me<p>
        <p style="color:red">{{signInMessage}}</p>
        </div>
        <div class="modal-footer">
        <button class="btn btn-primary" ng-click="signin()">Sign In</button>
        <button class="btn btn-warning" ng-click="cancel()">Close</button>
        </div>
      script(type='text/ng-template', id='signup.html').
        <div class="modal-header">
        <h3 class="modal-title">Authentication Panel</h3>
        </div>
        <div class="modal-body">
        <div class="form-group">
        <label for="fullname">Full Name</label>
        <input class="form-control" type="name" name="fullname" ng-model="user.fullname" placeholder="Full Name">
        </div>
        <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" type="email" name="email" ng-model="user.email" placeholder="Email">
        </div>
        <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" ng-model="user.password" placeholder="Password">
        </div>
        <div class="form-group">
        <label for="pass2">Confirm Password</label>
        <input class="form-control" type="password" name="pass2" ng-model="user.pass2" placeholder="Confirm Password">
        </div>
        <p style="color:red">{{signUpMessage}}</p>
        </div>
        <div class="modal-footer">
        <button class="btn btn-primary" ng-click="signup()">Sign Up</button>
        <button class="btn btn-warning" ng-click="cancel()">Close</button>
        </div>
