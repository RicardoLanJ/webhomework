div.signinup(ng-controller='switchInOrUp')
	div.chsignin(ng-click="active = 'signin'") 登录
	div.chsignup(ng-click="active='signup'") 注册
	form.signin(ng-show="active=='signin'" ng-submit="login(user)")
		label(for='username') 用户名
		input(placeholder='用户名' type='text' name='username' ng-model='user.username')
		br
		label(for='password') 密码
		input(placeholder='密码' type='text' name='password' ng-model='user.password')
		br
		button(type='submit') 登录
	form.signup(ng-show="active=='signup'" ng-submit="register()" ng-model='user.username')
		label(for='username') 用户名
		input(placeholder='用户名' type='text' name='username' ng-model='user.password')
		br
		label(for='password') 密码	
		input(placeholder='密码' type='text' name='password')
		br
		button(type='submit') 注册

