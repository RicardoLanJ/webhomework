div.signinup(ng-controller='switchInOrUp')
    div.chsignin(ng-click="active = 'signin'") 登录
    div.chsignup(ng-click="active='signup'") 注册
    form.signin(name='loginForm' ng-show="active=='signin'" ng-submit="loginForm.$vaild && login(user)")
        label(for='username') 用户名
        input(placeholder='用户名' type='text' name='username' ng-model='user.username' ng-model-options="{ updateOn: 'blur' }" required='' username)
        span(ng-show="(loginForm.$submitted || loginForm.username.$touched) && loginForm.username.$error.username") username is not existed.
        br
        label(for='password') 密码
        input(placeholder='密码' type='text' name='password' ng-model='user.password' required='' password)
        br
        button(type='reset' ng-click='loginForm.$setPristine() || loginForm.$setUntouched()') 重置
        button(type='submit') 登录
    form.signup(name='registForm' ng-show="active=='signup'" ng-submit="registForm.$vaild && register(user)")
        label(for='username') 用户名
        input(placeholder='用户名' type='text' name='username' ng-model='user.username' ng-model-options="{ updateOn: 'blur' }" required='' username)
